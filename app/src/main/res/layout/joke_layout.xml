<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:orientation="horizontal">

    <TextView
        android:id="@+id/textview_id"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/text_view"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/star_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_star_border_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_id"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/share_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/star_button"
        app:layout_constraintTop_toTopOf="@+id/textview_id"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/star_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/star_image"
        app:layout_constraintStart_toStartOf="@id/star_image" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/share_image"
        app:layout_constraintStart_toStartOf="@id/share_image" />

</merge>